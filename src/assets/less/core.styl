      &img
        margin auto

    &.b-grid__item--1-2
      flex-basis 100% !important
      max-width 100% !important

      &:last-child
        margin 0 auto

  .wrapper
    padding 0
    .inner-list
      p
        &.title
          font-size 32px
          padding 0 1em

        &::selection
          background #ffd24f

    .inner
      padding 0

      .b-grid__list 
        .b-grid__item
          &:first-child
            padding-left 15px

          &:last-child
            padding-right 15px

  .spotlights
    margin-bottom 0
    article
      padding 3em 2em 3em 3em
      margin-bottom 0

  footer 
    .menu 
      ul
        padding 0
        margin-left -15px
        li
          float left

  #contacts 
    input
      padding 0 5px
      margin-left -8px
      border-radius 0
      min-width: 270px

    .spotlights 
      article
        padding 3.5em 0em 1.5em 3em

  .teams
    .b-grid__item
      padding 0

    .serokell
      .title
        margin-top 1.5em

  .welcome
    padding-right 15px

  .title
    font-size 36px
    padding-left 15px
    padding-right 15px

  #partners
    .spotlights 
      article
        padding 3.5em 1em 1.5em 1.5em
      

