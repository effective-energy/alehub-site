primary-b-c = #474b4b
secondary-b-c = #f7f7f7
block-b-c = #ececec
hightlight-b-c = #ffd24f
hightlight-b-c__o3 = 0.3
hightlight-b-c__o5 = 0.5
special-b-c = #0d1717

primary-c = #0d1717
primary-c__o5 = 0.5
secondary-c = #fcfcfc
secondary-c__o4 = 0.4

button-b-r = 2px

body
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline
  font-family MuseoSansCyrl500
  background-color #f5f8fa
  &::selection
    background #ffd24f

html
  font-size 14px

h1
h2
h3
h4
h5
h6
  font-family MuseoSansCyrl500
  line-height 1.3
  margin 0 0 1em 0
  &::selection
    background hightlight-b-c

h2
  font-size 1.75em

.menu
  ul
    li
      font-size 14px
      line-height 1.5
      font-family MuseoSansCyrl500
      color secondary-c
      transition color 200ms ease
      &:hover
        color hightlight-b-c

.greeting
  min-height 100vh
  height auto
  background primary-b-c

  .b-grid__list
    position relative
    padding-top calc(10% + 100px)

  .welcome
    margin-top 0
    color #fff
    font-size 82px
    margin-bottom: 2em

  .starting
    color hightlight-b-c
    font-size 50px
    text-transform uppercase

.wrapper
  padding 6em 0 4em 0
  position relative
  background-color #f5f8fa
  color #637485

  .inner
    margin 0 auto
    max-width 75em
    width calc(100% - 4em)
    padding: 0 1em 0 2em

    .b-grid__list

      .b-grid__item
        padding: 0 15px 15px 15px

      .b-grid__item--1-2, .b-grid__item--1-3

        &:first-child
          padding: 0 15px 15px 0

        &:last-child
          padding: 0 0 15px 15px

  .inner-list
    p.title
      color #fff
      font-size 46px
      margin-bottom 1em

    p.subtitle
      color #fff
      font-size 20px

    .b-grid__list
      color #fff

      h3
        font-size 24px

.teams
  background-color #2a2d30
  .title
    color #fff
    text-align center

  .serokell
    text-align center
    margin-bottom 5em

    .title
      margin-bottom 0.5em

.wrapper.style2
  background-color #f5f8fa
  color #637485

  .button
    background-color hightlight-b-c
    border-radius 0
    font-size 14px
    border none
    color #34343e
    height 41px
    line-height 3.1
    padding 0 1em

    &:hover
      background #ffdd78
      cursor pointer

.wrapper.style3
  background-color #0d1717
  padding 3em 0 4em 0

input[type="submit"]
input[type="reset"]
input[type="button"]
button, .button
  -moz-appearance none
  -webkit-appearance none
  -ms-appearance none
  appearance none
  -moz-transition background-color 0.2s ease-in-out, color 0.2s ease-in-out
  -webkit-transition background-color 0.2s ease-in-out, color 0.2s ease-in-out
  -ms-transition background-color 0.2s ease-in-out, color 0.2s ease-in-out
  transition background-color 0.2s ease-in-out, color 0.2s ease-in-out
  border-radius 4px
  border 0
  cursor pointer
  display inline-block
  font-size 0.8em
  font-weight 700
  height 3.5em
  line-height 3.5em
  padding 0 2.25em
  text-align center
  text-decoration none
  text-transform uppercase
  white-space nowrap

.actions
  cursor default
  list-style none
  padding-left 0

  li
    display inline-block
    padding 0 1em 0 0
    vertical-align middle

    &:last-child
      padding-right 0

.spotlights
  display -moz-flex
  display -webkit-flex
  display -ms-flex
  display flex
  -moz-flex-wrap wrap
  -webkit-flex-wrap wrap
  -ms-flex-wrap wrap
  flex-wrap wrap
  -moz-justify-content center
  -webkit-justify-content center
  -ms-justify-content center
  justify-content center
  margin-bottom 0
  font-family MuseoSansCyrl500
  margin-left -15px

  article
    background-color #ffffff
    padding 3.5em 3em 1.5em 3em
    box-shadow 0 1em 5em rgba(0, 0, 0, 0.05)
    margin-bottom 3em

    &.info-card
      max-width 600px

    header.major
      margin-bottom 2em
      padding-bottom 2em
      position relative

      p
        color #0d1717
        font-weight 700
        margin-bottom 0.25em
        text-transform uppercase

      p.large
        font-size 30px

      h1
      h2
      h3
        margin-bottom 0
        color #474b4b

      &:after
        width 7em
        position absolute
        left 0
        height 1px
        content ''
        bottom 0
        background-color #d1d1d1

    p
      color #474b4b

      &::selection
          background #ffd24f

    @media screen and (max-width: 760px)
      li
        width calc(100% - 20px)
        margin-bottom 20px
        margin-right 0
        li
          width calc(100% - 10px)

        a
          width 100%

        &:last-child
          margin-bottom 0

.title
  opacity 0.9
  font-size 60px
  font-weight 900
  letter-spacing -0.6px
  margin 0

.subtitle
  opacity 0.9
  font-size 40px
  font-weight 900
  letter-spacing -0.6px
  margin 0

.text-center
  text-align center

.right
  background-color #ffffff
  padding 60px 60px
  position relative
  border-radius 4px 0 0 4px

  &::after
    content ''
    display inline-block
    width 60%
    height 100%
    position absolute
    top 0
    right -60%
    background-color #ffffff

.left
  background-color #ffffff
  padding 60px 60px
  position relative
  border-radius 0 4px 4px 0

  &::after
    content ''
    display inline-block
    width 100%
    height 100%
    position absolute
    top 0
    right 100%
    background-color #ffffff

.pull-left
  float left

.pull-right
  float right

.team-list
  display flex
  flex-wrap wrap
  margin-top 50px

  .item
    width 33%
    text-align center
    margin-bottom 30px

    @media screen and (max-width: 1024px)
      width 50%

    @media screen and (max-width: 760px)
      width 100%

    img
      margin-bottom 10px

    h1, h3
      color #ffffff

    h1
      margin-bottom 10px

#contacts
  input 
    height 39px
    min-width 300px
    padding 0 15px
    font-size 14px
    border-radius 0px
    border-style solid
    border-color #ccc
    border-width 1px

    &:focus
      outline none

  .subscribe
    padding-bottom 4px
    margin-left -5px

  .button
    border-radius 0px

  @media screen and (max-width: 760px)
    input 
      width calc(100% - 35px)

    .subscribe
      margin 20px 0 0 -8px
      width calc(100% - 10px)
      text-align center

      span
        margin auto

      a
        width 100%

#communication
  .title
    margin-bottom 20px
  h3
    margin-bottom 20px
    color: #ccc
  a
    margin-right 10px

#distribution
  padding-bottom 0

footer
  display flex
  justify-content space-between
  padding 1.5em
  align-items center
  background-color #f5f8fa
  color: #363636
  margin-top 50px

  .b-grid__item
    margin: 0
    padding: 0

  .menu
    float: left

    ul
      display block
      margin: 0

      li
        color: black
        display: inline
        padding: 1em .5em
        color: #fff
        cursor: pointer

  .year
    float: left

  @media screen and (max-width: 760px)
    .year
      display: block
      float: none
      text-align: center

    .menu
      ul
        margin-left: -40px
        margin-top: 10px
        text-align: center

.partners-list
  .b-grid__item
    margin-bottom 50px

.center
  text-align center

.b-grid__item
  &.b-grid__item--1-3
    text-align center

.grid_inner
  margin auto
  width 60%
  line-height 1.5
  font-size 14px
  >ul
    text-align left
    >li
      padding-bottom 10px
      &:last-child
        padding-bottom 0

