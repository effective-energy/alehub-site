      &:last-child
        margin 0 auto 0

  .grid_inner
    width 100%

  .anim
    display none

@media screen and (max-width: 760px)
  .b-grid__item
    &.b-grid__item--1-3
      flex-basis 100% !important
      max-width 100% !important

      &:last-child
