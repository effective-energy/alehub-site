body
    background #ececf0
    font-family MuseoSansCyrl300
    overflow-x hidden

@keyframes movingcolor
    0%
        background-position 0% 0%
    100%
        background-position 100% 100%

.navbar
    height 74px
    padding-left 64px
    padding-right 64px
    -webkit-box-shadow 0px 3px 21px -11px #000000
    -moz-box-shadow 0px 3px 21px -11px #000000
    box-shadow 0px 3px 21px -11px #000000

    &.bg-white
        background #FFF

.navbar-light
    .navbar-brand
        color #34343e

    .navbar-nav
        .show, .active
            > .nav-link
                color #34343e

        .nav-link
            &.show, &.active
                color #34343e

.navbar-brand
    font-size 40px
    font-family Fairview
    display flex

    img
        margin-right 8px

.right-menu
    padding-top .5rem
    padding-bottom .5rem
    display flex

.navbar-nav
    .nav-item
        font-family MuseoSansCyrl500

        &:nth-child(1)
            &.active
                ~ .nav-line
                    -webkit-transform translate3d(0, 0, 0)
                    transform translate3d(0, 0, 0)

        &:nth-child(2)
            &.active
                ~ .nav-line
                    -webkit-transform translate3d(100%, 0, 0)
                    transform translate3d(100%, 0, 0)

        &:nth-child(3)
            &.active
                ~ .nav-line
                    -webkit-transform translate3d(200%, 0, 0)
                    transform translate3d(200%, 0, 0)

        &:nth-child(4)
            &.active
                ~ .nav-line
                    -webkit-transform translate3d(300%, 0, 0)
                    transform translate3d(300%, 0, 0)

        &:nth-child(5)
            &.active
                ~ .nav-line
                    -webkit-transform translate3d(400%, 0, 0)
                    transform translate3d(400%, 0, 0)

        &:nth-child(6)
            &.active
                ~ .nav-line
                    -webkit-transform translate3d(500%, 0, 0)
                    transform translate3d(500%, 0, 0)

        &:nth-child(7)
            &.active
                ~ .nav-line
                    -webkit-transform translate3d(600%, 0, 0)
                    transform translate3d(600%, 0, 0)

        &:nth-child(8)
            &.active
                ~ .nav-line
                    -webkit-transform translate3d(700%, 0, 0)
                    transform translate3d(700%, 0, 0)

    .nav-line
        position absolute
        top 66%
        width 0
        height 2px
        pointer-events none
        -webkit-transition -webkit-transform 0.5s
        transition all 0.5s
        -webkit-transition-timing-function cubic-bezier(0.46, 0.05, 0.46, 0.79)
        -webkit-transition-timing-function cubic-bezier(0.46, 0.05, 0.46, 0.79)
        transition-timing-function cubic-bezier(0.46, 0.05, 0.46, 0.79)

