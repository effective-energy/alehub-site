.anim
    width 100%
    height 200vh
    position absolute

    .path
        stroke-width 0.5

img, a
    z-index 10

::-webkit-scrollbar
    width 9px
    height 5px

    &:horizontal
        background-color #484e5b

::-webkit-scrollbar-track-piece
    background-color rgba(0, 0, 0, 0)
    border-radius 3px

::-webkit-scrollbar-thumb
    &:vertical
        height 9px
        border 3px solid rgba(0, 0, 0, 0)
        background-clip padding-box
        background-color #8f9292
        border-radius 3px

        &:active
            height 5px
            background-color #8f9292
            border-radius 3px

        &:window-inactive
            height 5px
            background-color #8f9292
            border-radius 3px

    &:horizontal
        width 5px
        background-color #ffbc00
        border-radius 3px